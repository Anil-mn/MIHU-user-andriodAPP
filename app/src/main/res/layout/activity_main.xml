<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.example.anilmn.may_i_help_you.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="304dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:background="@color/colorPrimaryDark"
        android:text="Sign UP"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="424dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_above="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="first name"
        android:inputType="text|textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white3"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="151dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_alignEnd="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignTop="@+id/editText"
        android:ems="10"
        android:hint="secound name"
        android:inputType="textPersonName"
        android:textColorHint="@color/white2"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="151dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white3"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:layout_above="@+id/editText5"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="email id"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white3"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="251dp" />

    android:layout_width="300dip"
    <EditText
        android:id="@+id/editText5"
        android:layout_height="40dip"
        android:layout_above="@+id/editText6"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="phone number "
        android:inputType="phone"
        android:textColorHint="@color/white3"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="303dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:layout_above="@+id/button"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@+id/editText2"
        android:layout_toStartOf="@+id/editText2"
        android:ems="10"
        android:hint="pin"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white3"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="364dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText2"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"
        android:text="MAY I HELP YOU ?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        app:srcCompat="@drawable/logo" />


</RelativeLayout>
